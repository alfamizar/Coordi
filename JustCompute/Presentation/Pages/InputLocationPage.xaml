<?xml version="1.0" encoding="utf-8" ?>
<v1:BasePage xmlns:v1="clr-namespace:JustCompute.Presentation.Pages"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JustCompute.Presentation.Pages.InputLocationPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:localization="clr-namespace:JustCompute.Presentation.Helpers"
             xmlns:ViewModels="clr-namespace:JustCompute.Presentation.ViewModels"
             xmlns:models="clr-namespace:Compute.Core.Domain.Entities.Models;assembly=Compute.Core"
             xmlns:windows="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.WindowsSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
             x:DataType="ViewModels:InputLocationViewModel"
             Shell.PresentationMode="Animated"
             Shell.TabBarIsVisible="False"
             Title="{localization:Localize AddLocationLabel}">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding GoBackCommand}" />
    </Shell.BackButtonBehavior>

    <ContentPage.Content>

        <Grid RowDefinitions="*, 64"
              Padding="4,0"
              IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}">

            <ScrollView Grid.Row="0">

                <StackLayout Padding="8"
                             Spacing="16">

                    <Label Text="{localization:Localize LocationNameLabel}" />
                    <Entry x:Name="LocationNameEntry"
                           Placeholder="{localization:Localize LocationNameLabel}"
                           Text="{Binding Location.Name, Mode=TwoWay}">
                    </Entry>

                    <Label Text="{localization:Localize CountryLabel}" />
                    <Entry x:Name="CountryEntry"
                           Placeholder="{localization:Localize CountryLabel}"
                           Text="{Binding Location.City.CountryName, Mode=TwoWay}" />

                    <Label Text="{localization:Localize CityLabel}" />
                    <Entry x:Name="CityEntry"
                           Placeholder="{localization:Localize CityLabel}"
                           Text="{Binding Location.City.CityName, Mode=TwoWay}" />

                    <Label Text="{localization:Localize UTCTimeOffsetLabel}" />
                    <Picker Title="{Binding Location.TimeZoneOffset}"
                            ItemsSource="{Binding TimeZoneOffsets}"
                            SelectedItem="{Binding Location.TimeZoneOffset, Mode=TwoWay}" />

                    <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                          ColumnDefinitions="*, Auto"
                          RowSpacing="16">

                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Text="{localization:Localize LatitudeLabel}" />
                        <Entry x:Name="LatitudeEntry"
                               Grid.Row="1"
                               Grid.Column="0"
                               Placeholder="{localization:Localize LatitudeLabel}"
                               Text="{Binding Location.Latitude, Mode=TwoWay}"
                               Keyboard="Numeric">
                            <Entry.Triggers>
                                <DataTrigger TargetType="Entry"
                                             Binding="{Binding Location.Latitude, Converter={StaticResource CoordinateRangeValidatorToBoolConverter}, ConverterParameter='latitude'}"
                                             Value="False">
                                    <Setter Property="TextColor"
                                            Value="Red" />
                                </DataTrigger>
                            </Entry.Triggers>
                        </Entry>

                        <Label Grid.Row="2"
                               Grid.Column="0"
                               Text="{localization:Localize LongitudeLabel}" />
                        <Entry x:Name="LongitudeEntry"
                               Grid.Row="3"
                               Grid.Column="0"
                               Placeholder="{localization:Localize LongitudeLabel}"
                               Text="{Binding Location.Longitude, Mode=TwoWay}"
                               Keyboard="Numeric">
                            <Entry.Triggers>
                                <DataTrigger TargetType="Entry"
                                             Binding="{Binding Location.Longitude, Converter={StaticResource CoordinateRangeValidatorToBoolConverter}, ConverterParameter='longitude'}"
                                             Value="False">
                                    <Setter Property="TextColor"
                                            Value="Red" />
                                </DataTrigger>
                            </Entry.Triggers>
                        </Entry>

                        <ImageButton x:Name="useMyLocationButton"
                                     Grid.Row="0"
                                     Grid.Column="1"
                                     Grid.RowSpan="4"
                                     WidthRequest="32"
                                     HeightRequest="32"
                                     CornerRadius="16"
                                     Margin="16"
                                     Background="Transparent"
                                     Source="my_location_icon_light.png"
                                     VerticalOptions="Center"
                                     IsVisible="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                                     Command="{Binding Commands[PrefillCoordinatesCommand]}"/>

                    </Grid>

                </StackLayout>

            </ScrollView>

            <Button x:Name="SaveLocationButton"
                    Grid.Row="1"
                    Text="{localization:Localize SaveLocationButtonText}"
                    Command="{Binding Commands[SaveLocationCommand]}"
                    Margin="8" />

            <ActivityIndicator HeightRequest="50"
                               WidthRequest="50"
                               AbsoluteLayout.LayoutFlags="All"
                               AbsoluteLayout.LayoutBounds="0.5,0.5,50,50"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               IsVisible="{Binding IsBusy}"
                               IsRunning="{Binding IsBusy}" />

        </Grid>

    </ContentPage.Content>

</v1:BasePage>
